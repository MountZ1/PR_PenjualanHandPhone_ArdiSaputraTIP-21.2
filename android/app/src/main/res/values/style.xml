<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MyDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/dialog</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerSize">2dp</item>
        <item name="cornerRadius">2dp</item>
        <item name="itemTextColor">@color/black</item>
        <item name="dialogCornerRadius">2dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveButton</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/positiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">@style/NegativeButton</item>
        <item name="colorAccent">@color/buttonColor</item>
        <item name="colorButtonNormal">@color/buttonColor</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="positiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="rippleColor">@color/buttonColor</item>
    </style>
    <style name="NegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="rippleColor">@color/buttonColor</item>
</style>
</resources>